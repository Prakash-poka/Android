<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="#151515"
            android:id="@+id/readingstab"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Your Readings"
                android:id="@+id/yourreadings"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Yesterday's Avg"
                android:textColor="@color/white"
                android:layout_below="@+id/yourreadings"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="N/A"
                android:id="@+id/yesterdaysreading"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_below="@id/yourreadings"
                android:layout_marginTop="8dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Last Month's Avg"
                android:textColor="@color/white"
                android:layout_below="@+id/yesterdaysreading"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="N/A"
                android:id="@+id/lastmonthsreading"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_below="@id/yesterdaysreading"
                android:layout_marginTop="8dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Sugar Status"
                android:textColor="@color/white"
                android:layout_below="@+id/lastmonthsreading"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="N/A"
                android:id="@+id/sugarstatus"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_below="@id/lastmonthsreading"
                android:layout_marginTop="8dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Enter Todays Readings"
                android:id="@+id/Todaysreadings"
                android:layout_below="@id/sugarstatus"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Todaysreadings"
                android:layout_marginTop="16dp"
                android:text="N/A"
                android:textSize="20sp"
                android:background="@drawable/rounded_textview"
                android:textColor="#a9a9a9"
                android:gravity="center"
                android:id="@+id/morningreading"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Morning's Reading"
                android:layout_below="@id/morningreading"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Todaysreadings"
                android:layout_toEndOf="@id/morningreading"
                android:layout_marginTop="16dp"
                android:text="N/A"
                android:textSize="20sp"
                android:background="@drawable/rounded_textview"
                android:textColor="#a9a9a9"
                android:gravity="center"
                android:id="@+id/afternoonreading"
                android:layout_marginStart="32dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Afternoon's Reading"
                android:layout_below="@id/afternoonreading"
                android:layout_toEndOf="@+id/morningreading"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="32dp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Todaysreadings"
                android:layout_toEndOf="@id/afternoonreading"
                android:layout_marginTop="16dp"
                android:text="N/A"
                android:textSize="20sp"
                android:background="@drawable/rounded_textview"
                android:textColor="#a9a9a9"
                android:gravity="center"
                android:id="@+id/eveningreading"
                android:layout_marginStart="32dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Evening's Reading"
                android:layout_below="@id/eveningreading"
                android:layout_toEndOf="@+id/afternoonreading"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="32dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Todaysreadings"
                android:layout_toEndOf="@id/eveningreading"
                android:layout_marginTop="16dp"
                android:text="N/A"
                android:textSize="20sp"
                android:background="@drawable/rounded_textview"
                android:textColor="#a9a9a9"
                android:gravity="center"
                android:id="@+id/nightreading"
                android:layout_marginStart="32dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Night's Reading"
                android:layout_below="@id/eveningreading"
                android:layout_toEndOf="@+id/eveningreading"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="32dp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comparison"
            android:id="@+id/comparisontext"
            android:layout_below="@id/readingstab"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#454545"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_below="@id/comparisontext"
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="This Month Avg"
                    android:textColor="#151515"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thismonthavg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="N/A"
                    android:textColor="#151515"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Days Tested"
                    android:textColor="#151515"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thismonthtesteddays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="N/A"
                    android:textColor="#151515"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Days out of Normal Range"
                    android:textColor="#151515"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/baddays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="N/A"
                    android:textColor="#151515"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Last Month Avg"
                        android:id="@+id/Lastmonthname"
                        android:textColor="#151515"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lastmonthavg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="N/A"
                        android:textColor="#151515"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Days Tested"
                        android:textColor="#151515"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lastmonthtesteddays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="N/A"
                        android:textColor="#151515"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Days out of Normal Range"
                        android:textColor="#151515"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lastmonthbaddays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="N/A"
                        android:textColor="#151515"
                        android:textSize="16sp"
                        android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>